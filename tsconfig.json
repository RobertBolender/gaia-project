{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2018",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",                        /* Redirect output structure to the directory. */
    // "paths": {
    //   "@/*": [
    //     "src/*"
    //   ]
    // },
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "src/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}